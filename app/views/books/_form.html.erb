        <label><%= check_box_tag("book[genre_ids][]", genre.id, genre.id.in?(book.genres.collect(&:id))) %> <%= genre.name %></label>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :summary %>
    <%= form.text_area :summary, id: :book_summary %>
  </div>

  <div class="field">
    <%= form.label :draft %>
    <%= form.check_box :draft, id: :book_draft %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

    <%= form.label :author %>
    <%= form.text_field :author, id: :book_author %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_area :image, id: :book_image %>
  </div>

  <div class="field">
    <%= form.label :summary %>
    <%= form.text_area :summary, id: :book_summary %>
  </div>

  <div class="field">
    <div class="field_head">Genre</div>
    <%= hidden_field_tag("book[genre_ids][]", nil) %>
